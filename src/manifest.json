{
	"manifest_version": 3,
	"name": "LinkMd",
	"description": "Create a markdown link of the current page with quoted text.",
	"version": "1.0",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"64": "icon-64.png",
			"128": "icon-128.png"
		}
	},
	"icons": {
		"64": "icon-64.png",
		"128": "icon-128.png",
		"512": "icon-512.png"
	},
	"permissions": [
		"activeTab",
		"scripting",
		"clipboardWrite"
	],
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Alt+Shift+C"
			},
			"description": "Copy quote link to clipboard"
		}
	}
}